generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./timer.db"
}

model Console {
  id       String  @id @default(cuid())
  gpio     Int     @unique
  name     String?
  Windows   Windows? @relation(fields: [windowsId], references: [id])
  windowsId Int?

}

model Windows {
  id      Int       @id @default(autoincrement())
  name    String?   @unique
  console Console[]
}

